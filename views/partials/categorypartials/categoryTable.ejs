<div class="container" style="margin-top: 100px;">
    <h1>Categories</h1>
    <button class="btn btn-success btn-lg">Add New</button>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(function(category) { %>
                <tr>
                    <td><%= category.id %></td>
                    <td><%= category.name %></td>
                    <td>
                        <button class="btn btn-warning btn-sm editCategoryBtn" 
                            data-categoryId="<%= category.id %>" 
                            data-categoryName="<%= category.name %>">Edit</button>
                        <button class="btn btn-danger btn-sm deleteCategoryBtn" data-categoryId="<%= category.id %>">Delete</button>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
